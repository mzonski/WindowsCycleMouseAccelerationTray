<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
    <Fragment>
        <UI>
            <Dialog Height="270" Id="OptionsDlg" Title="[ProductName] Setup" Width="370">
                <Control Height="15" Id="Title" NoPrefix="yes" Text="{\WixUI_Font_Title}Setup Options" Transparent="yes" Type="Text" Width="200" X="15" Y="6"/>
                <Control Height="15" Id="Description" NoPrefix="yes" Text="Choose startup options" Transparent="yes" Type="Text" Width="280" X="25" Y="23"/>
                <Control Height="44" Id="BannerBitmap" TabSkip="no" Text="!(loc.InstallDirDlgBannerBitmap)" Type="Bitmap" Width="370" X="0" Y="0"/>
                <Control Height="0" Id="BannerLine" Type="Line" Width="370" X="0" Y="44"/>
                <Control Height="0" Id="BottomLine" Type="Line" Width="370" X="0" Y="234"/>
                <Control CheckBoxValue="1" Height="17" Id="AutostartCheckbox" Property="AUTOSTART_ENABLED" Text="Start with Windows" Type="CheckBox" Width="290" X="20" Y="60"/>
                <Control CheckBoxValue="1" Height="17" Id="LaunchCheckbox" Property="LAUNCH_AFTER_INSTALL" Text="Launch after installation" Type="CheckBox" Width="290" X="20" Y="80"/>
                <Control Height="17" Id="Back" Text="!(loc.WixUIBack)" Type="PushButton" Width="56" X="180" Y="243"/>
                <Control Default="yes" Height="17" Id="Next" Text="!(loc.WixUINext)" Type="PushButton" Width="56" X="236" Y="243"/>
                <Control Cancel="yes" Height="17" Id="Cancel" Text="!(loc.WixUICancel)" Type="PushButton" Width="56" X="304" Y="243">
                    <Publish Condition="1" Event="EndDialog" Value="Exit"/>
                </Control>
            </Dialog>
        </UI>
    </Fragment>
</Wix>